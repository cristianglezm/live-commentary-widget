{
  "name": "@cristianglezm/live-commentary-widget",
  "version": "1.2.0",
  "description": "A React component that provides a Twitch-chat-like widget for live AI commentary on screen / canvas content.",
  "author": "Cristian Gonzalez <cristian.glez.m@gmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cristianglezm/live-commentary-widget.git"
  },
  "bugs": {
    "url": "https://github.com/cristianglezm/live-commentary-widget/issues"
  },
  "homepage": "https://github.com/cristianglezm/live-commentary-widget",
  "keywords": [
    "AI",
    "live AI commentary",
    "react",
    "widget",
    "chat",
    "overlay"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "style": "./dist/live-commentary-widget.css",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": "./dist/live-commentary-widget.css"
  },
  "files": [
    "dist",
    "src",
    "LICENSE.md",
    "README.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.2.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.8"
  }
}
